<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fr_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main_fr_main_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/assign_toolbar">
        <Spinner
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:id="@+id/fr_main_spinner_sort"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/sort"
            />
        <Spinner
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:id="@+id/fr_main_spinner_distance"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/distances"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/main_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_fr_main_tab_bar"
        android:overScrollMode="never">
    <LinearLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>
