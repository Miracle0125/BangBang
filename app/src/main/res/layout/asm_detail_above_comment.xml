<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/edit_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.yzx.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/inner_edit_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@+id/button_send_comment">

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="不说点什么吗"
                android:maxLines="6" />
        </com.yzx.floatlabelededittext.FloatLabeledEditText>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/button_send_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/inner_edit_wrapper"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            app:placeholderImage="@drawable/icon_send" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/num_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="6dp"
            android:text="0条评论" />

        <TextView
            android:id="@+id/button_all_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:padding="6dp"
            android:text="查看全部"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>