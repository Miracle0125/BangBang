<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <com.yzx.bangbang.view.mainView.Portrait
        android:clickable="true"
        android:id="@+id/employer_portrait"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        fresco:placeholderImage="@drawable/main_icon_portrait"
        fresco:roundAsCircle="true"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/employer_portrait"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/employer_portrait"
        android:textSize="17sp"
        android:text="user_name"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_alignLeft="@+id/user_name"
        android:text="date"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employer_portrait"
        android:layout_alignLeft="@+id/employer_portrait"
        android:layout_marginTop="10dp"
        android:text="message"/>

    <FrameLayout
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/message"
        android:background="#DCDCDC" />

    <TextView
        android:visibility="gone"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        android:id="@+id/btn_fulfill"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击验收"
        android:layout_centerVertical="true"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:clickable="true"
        android:id="@+id/btn_message"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        fresco:placeholderImage = "@drawable/icon_message"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/btn_choose"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        fresco:placeholderImage = "@drawable/icon_choose"/>
</RelativeLayout>