<?xml version="1.0" encoding="utf-8"?>
<com.yzx.bangbang.view.ad.CommentView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DDDDDD"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yzx.bangbang.view.mainView.Portrait
        android:id="@+id/ad_comment_portrait"
        android:layout_width="32dp"
        android:layout_height="32dp"
        fresco:roundAsCircle="true"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/ad_sub_comment_poster_name"
            android:layout_toRightOf="@+id/ad_comment_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:layout_toRightOf="@+id/ad_sub_comment_poster_name"
            android:layout_marginLeft="8dp"
            android:id="@+id/ad_sub_comment_date"
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"
            android:id="@+id/ad_sub_comment_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/ad_comment_portrait"
            android:layout_alignLeft="@+id/ad_comment_portrait"/></RelativeLayout>



</com.yzx.bangbang.view.ad.CommentView>